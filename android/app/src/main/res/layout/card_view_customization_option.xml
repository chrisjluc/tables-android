<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customizationOptionCardView"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/menu_item_card_height"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <tables.android.ui.components.TablesTextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/customizationCategoryTextView"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <tables.android.ui.components.TablesTextView
            android:gravity="end"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/customizationSelectedOptionTextView"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/customizationCategoryTextView"
            android:layout_toEndOf="@+id/customizationCategoryTextView"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>


</android.support.v7.widget.CardView>