<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tables.android.ui.intro.SignupEmailActivity">


    <tables.android.ui.components.TablesTextView
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:text="Name"
        android:id="@+id/nameTextView"
        android:layout_alignRight="@+id/emailTextView"
        android:layout_alignEnd="@+id/emailTextView"
        android:layout_alignTop="@+id/nameEditText"
        android:layout_alignBottom="@+id/nameEditText" />

    <tables.android.ui.components.TablesEditText
        android:textSize="14sp"
        android:hint="First Last"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameEditText"
        android:layout_toRightOf="@+id/nameTextView"
        android:layout_toEndOf="@+id/nameTextView" />


    <tables.android.ui.components.TablesTextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/emailTextView"
        android:text="Email"
        android:layout_alignTop="@+id/emailEditText"
        android:layout_alignRight="@+id/passwordTextView"
        android:layout_alignEnd="@+id/passwordTextView"
        android:layout_below="@+id/nameTextView"
        android:layout_alignBottom="@+id/emailEditText" />

    <tables.android.ui.components.TablesEditText
        android:textSize="14sp"
        android:hint="name@example.com"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/emailEditText"
        android:layout_toEndOf="@+id/emailTextView"
        android:layout_toRightOf="@+id/emailTextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameTextView" />


    <tables.android.ui.components.TablesTextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Password"
        android:id="@+id/passwordTextView"
        android:layout_below="@+id/emailTextView"
        android:layout_alignBottom="@+id/passwordEditText" />

    <tables.android.ui.components.TablesEditText
        android:textSize="14sp"
        android:hint="Minimum 6 characters"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/passwordEditText"
        android:layout_toRightOf="@+id/passwordTextView"
        android:layout_toEndOf="@+id/passwordTextView"
        android:layout_below="@+id/emailTextView" />

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/passwordTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <tables.android.ui.components.TablesTextView
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="By signing up you are agreeing to the" />

        <tables.android.ui.components.TablesTextView
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/termsTextView"
            android:text="Terms and Conditions" />
    </LinearLayout>

    <tables.android.ui.components.TablesButton
        android:height="@dimen/button_large_height"
        android:background="@color/tables_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/signupButton"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
