<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tables.android.ui.restaurant.RestaurantActivity">


    <ScrollView
        android:layout_above="@+id/restaurantActivityCheckInButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/restaurantCoverPhotoImageView"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:transitionName="@string/transition_restaurant_cover_photo"/>

            <RelativeLayout
                android:id="@+id/menuItem"
                android:background="@android:color/white"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/restaurant_menu_item_height">

                <tables.android.ui.components.TablesTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Menu"
                    android:gravity="center"
                    android:textSize="18sp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/specialsItem"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/restaurant_menu_item_height">

                <tables.android.ui.components.TablesTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Specials"
                    android:gravity="center"
                    android:textSize="18sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contactItem"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/restaurant_menu_item_height">

                <tables.android.ui.components.TablesTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Contact"
                    android:gravity="center"
                    android:textSize="18sp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/hoursItem"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/restaurant_menu_item_height">

                <tables.android.ui.components.TablesTextView
                    android:layout_marginTop="8dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:gravity="center"
                    android:textSize="18sp"
                    />
                <tables.android.ui.components.TablesTextView
                    android:layout_marginTop="4dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="9:00 AM - 9:00 PM"
                    android:gravity="center"
                    android:textSize="18sp"
                    />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_large_height"
        android:text="Check In"
        android:id="@+id/restaurantActivityCheckInButton"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
