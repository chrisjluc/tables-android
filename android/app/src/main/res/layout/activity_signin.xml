<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tables.android.ui.SigninActivity">

    <tables.android.ui.components.TablesButton
        android:layout_width="fill_parent"
        android:background="@color/facebook_blue"
        android:layout_height="@dimen/button_large_height"
        android:text="Sign in with Facebook"
        android:id="@+id/signinFacebookButton" />

    <View
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_below="@+id/signinFacebookButton"
        android:layout_width="fill_parent"
        android:id="@+id/divider"
        android:layout_height="1dip"
        android:background="@color/tables_grey" />

    <tables.android.ui.components.TablesTextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/emailTextView"
        android:text="Email"
        android:layout_alignTop="@+id/emailEditText"
        android:layout_alignRight="@+id/passwordTextView"
        android:layout_alignEnd="@+id/passwordTextView"
        android:layout_below="@+id/divider"
        android:layout_alignBottom="@+id/emailEditText" />

    <tables.android.ui.components.TablesEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/emailEditText"
        android:layout_toEndOf="@+id/emailTextView"
        android:layout_toRightOf="@+id/emailTextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/divider" />


    <tables.android.ui.components.TablesTextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Password"
        android:id="@+id/passwordTextView"
        android:layout_below="@+id/emailTextView"
        android:layout_alignBottom="@+id/passwordEditText" />

    <tables.android.ui.components.TablesEditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/passwordEditText"
        android:layout_toRightOf="@+id/passwordTextView"
        android:layout_toEndOf="@+id/passwordTextView"
        android:layout_below="@+id/emailTextView" />

    <tables.android.ui.components.TablesTextView
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget your password?"
        android:id="@+id/forgestPasswordTextView"
        android:layout_below="@+id/passwordEditText"
        android:layout_centerHorizontal="true" />

    <tables.android.ui.components.TablesButton
        android:height="@dimen/button_large_height"
        android:background="@color/tables_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:id="@+id/signinButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
