<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/restaurant_card_view"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="128dp"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/restaurantCoverPhotoImageView"
            android:adjustViewBounds="true"
            android:transitionName="@string/transition_restaurant_cover_photo"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/translucent_black">

            <tables.android.ui.components.TablesTextView
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/restaurantNameTextView"
                android:text="Restaurant Name"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_above="@+id/restaurantTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <tables.android.ui.components.TablesLightTextView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:id="@+id/restaurantTypeTextView"
                android:text="Type"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <tables.android.ui.components.TablesTextView
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/restaurantRelativeDistanceTextView"
                android:text="1 KM"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

