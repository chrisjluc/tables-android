<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tables.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name=".TablesApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyB-nz-KTvAmQDuubqj-DU9HcoiHcN4ue8g" />
        
        <activity android:name=".ui.FindRestaurantsActivity" />
        <activity android:name=".ui.FindRestaurantsMapActivity" />
        <activity android:name=".ui.intro.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.intro.SignupEmailActivity"
            android:label="@string/title_activity_signup_email" />
        <activity
            android:name=".ui.intro.SigninActivity"
            android:label="@string/title_activity_signin" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="Facebook Login" />
        <activity
            android:name=".ui.restaurant.RestaurantActivity"
            android:label="@string/title_activity_restaurant" />
        <activity
            android:name=".ui.restaurant.MenuCategoriesActivity"
            android:label="@string/title_activity_menu_categories" />
        <activity
            android:name=".ui.ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".ui.restaurant.MenuItemsActivity"
            android:label="@string/title_activity_menu_items"></activity>
        <activity
            android:name=".ui.restaurant.MenuItemActivity"
            android:label="@string/title_activity_menu_item"></activity>
    </application>

</manifest>
